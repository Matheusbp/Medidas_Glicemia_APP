FROM rocker/verse:4.2.3
RUN apt-get update -y && apt-get install -y  libicu-dev  make  git libcurl4-openssl-dev libssl-dev  libcurl4-openssl-dev libssl-dev  git libcurl4-openssl-dev libssl-dev make libgit2-dev zlib1g-dev pandoc libfreetype6-dev libjpeg-dev libpng-dev libtiff-dev libicu-dev libfontconfig1-dev libfribidi-dev libharfbuzz-dev libxml2-dev  make zlib1g-dev pandoc libicu-dev  libcurl4-openssl-dev libssl-dev make  git libcurl4-openssl-dev libssl-dev libgit2-dev  libcurl4-openssl-dev libssl-dev git  git  make zlib1g-dev  libcurl4-openssl-dev libssl-dev libicu-dev  make pandoc  libssl-dev  pandoc  libcurl4-openssl-dev libssl-dev make pandoc libfreetype6-dev libjpeg-dev libpng-dev libtiff-dev libfontconfig1-dev libfribidi-dev libharfbuzz-dev libxml2-dev  make pandoc libicu-dev  libfreetype6-dev libjpeg-dev libpng-dev libtiff-dev libfontconfig1-dev libfribidi-dev libharfbuzz-dev  make pandoc libicu-dev libxml2-dev  libcurl4-openssl-dev libssl-dev libxml2-dev  libcurl4-openssl-dev libssl-dev libicu-dev libxml2-dev  libfontconfig1-dev libfreetype6-dev  libfontconfig1-dev libfreetype6-dev libfribidi-dev libharfbuzz-dev  libcurl4-openssl-dev libssl-dev make zlib1g-dev pandoc libfreetype6-dev libjpeg-dev libpng-dev libtiff-dev libicu-dev libfontconfig1-dev libfribidi-dev libharfbuzz-dev libxml2-dev  git libcurl4-openssl-dev libssl-dev make libgit2-dev  libxml2-dev && rm -rf /var/lib/apt/lists/*
RUN mkdir -p /usr/local/lib/R/etc/ /usr/lib/R/etc/
RUN echo "options(renv.config.pak.enabled = TRUE, repos = c(CRAN = 'https://cran.rstudio.com/'), download.file.method = 'libcurl', Ncpus = 4)" | tee /usr/local/lib/R/etc/Rprofile.site | tee /usr/lib/R/etc/Rprofile.site
RUN R -e 'install.packages(c("renv","remotes"))'
COPY renv.lock renv.lock
RUN R -e 'renv::restore()'
